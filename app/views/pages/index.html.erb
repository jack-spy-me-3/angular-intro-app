<div ng-app="app">
  {{ 1 + 1 }}

  <div ng-controller="stuffCtrl">
    <h2>Todo List</h2>
    <div ng-repeat="task in tasks track by $index" ng-if="isNotFood(task.text)">
      <p ng-click="markComplete(task)" ng-class="{strike: task.completed}">
        {{ task.text }}
      </p>
      <input ng-model="task.text">
    </div>
    <div>Number of incomplete tasks: {{ counter() }}</div>
    <h3>Leave your todo item:</h3>
    <input ng-model="newTodo">
    <button ng-click="addTodo(newTodo)">Add Todo Item</button>
    <button ng-click="removeCompletedTasks()">Remove Completed Tasks</button>
  </div>
</div>
